  <link rel="stylesheet" href="styles.css">
<script>
function validarCelda(celda){

			if (celda.value == "-1") {

				celda.className="btn_PresionadoBomba";
			}
			else if (celda.value == "0") {

				celda.className="btn_PresionadoVacio";
			}
		  else{
					celda.className="btn_PresionadoConValor";
					celda.innerHTML="<h3>"+ celda.value +"</h3>";
			}

 return false;
}	
</script>
	<style>
			.tablero{
				width: 416px;
				height: 416px;								
